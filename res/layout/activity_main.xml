<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.xinruzhishui.news.ui.PagerTab
                android:id="@+id/pager_tab"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#aaff0000" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hello_world" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="50dp"
        android:background="@drawable/menu_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_left_news"
            style="@style/styleName"
            android:drawableLeft="@drawable/tab_news_selecter"
            android:text="新闻" />

        <TextView
            android:id="@+id/tv_left_pic"
            style="@style/styleName"
            android:drawableLeft="@drawable/tab_pic_selecter"
            android:text="图片" />

        <TextView
            android:id="@+id/tv_left_mine"
            style="@style/styleName"
            android:drawableLeft="@drawable/tab_mine_selecter"
            android:text="登录" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>